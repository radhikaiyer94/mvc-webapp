
@model IEnumerable<MyMVCProject.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>ðŸŽ¬ Movie List</h2>
        <a asp-action="Create" class="btn btn-success">+ Add New Movie</a>
    </div>

    <div class="card shadow">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Genre)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ReleaseDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                            <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>

                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm me-1">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>