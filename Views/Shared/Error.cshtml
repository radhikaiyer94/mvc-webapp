@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger shadow p-4 rounded">
        <h1 class="display-5">Oops! Something went wrong.</h1>
        <p class="lead">An unexpected error occurred while processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <p class="mt-3">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <hr />
        <h4>Need help?</h4>
        <p>
            Please contact the administrator or try again later.
        </p>

        <div class="text-muted small mt-4">
            <p><strong>Note for Developers:</strong></p>
            <p>
                To see detailed error information, set the <strong>ASPNETCORE_ENVIRONMENT</strong>
                to <code>Development</code> in your environment variables and restart the application.
            </p>
        </div>
    </div>
</div>
